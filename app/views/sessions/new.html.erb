<div class="login">
    <div class="login-screen">

     <div class="login-icon">
      <img src="images/illustrations/book.png" alt="Welcome">
      <h4><small>On The Books</small></h4>
    </div>

    <%= form_tag sessions_path do %>

      <div class="login-form">
        <div class="control-group">
          <label class="login-field-icon fui-man-16"></label>
          <%= text_field_tag :email, params[:email], :class => "login-field", :placeholder => "Enter your email" %>
        </div>

        <div class="control-group">
          <label class="login-field-icon fui-lock-16"></label>
          <%= password_field_tag :password, nil, :class => "login-field", :placeholder => "Enter your password" %>
        </div>

      <br>

        <div class="actions"><%= submit_tag "Log In", :class => "btn btn-primary btn-large btn-block" %></div>

      </div>
    <% end %>
  </div>
</div>