<!DOCTYPE html>
<html>
<head>
  <title>OnTheBooks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <% if current_user %>
        <a class="brand" href="/users">On The Books</a>
        <% else %>
        <a class="brand" href="/">On The Books</a>
        <% end %>

        <div class="nav-collapse collapse">
          <% if current_user %>
          <p class="navbar-text pull-right">
            Logged in as <a href="#" class="navbar-link"><%= current_user.name%></a> | <a href="/logout" class="navbar-link">Logout</a>
          </p>
          <% else %>
          <p class="navbar-text pull-right">
          </p>
          <% end %>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>


<%= yield %>

</body>
</html>
